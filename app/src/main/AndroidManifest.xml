<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kincodi.helpet.helpetmobile">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".App"
        android:allowBackup="true"
        android:theme="@style/NoAppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/Api_Key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".presentation.ui.activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.ui.activities.WelcomeActivity"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".presentation.ui.activities.MapActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.ui.activities.LoginActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".presentation.ui.activities.RegisterActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:name=".presentation.ui.activities.PostActivity"
            tools:replace="android:name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ui.activities.NewPostActivity">
        </activity>

    </application>

</manifest>